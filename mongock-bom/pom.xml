<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>mongock</artifactId>
    <groupId>com.github.cloudyrock.mongock</groupId>
    <version>4.3.2</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>mongock-bom</artifactId>
  <packaging>pom</packaging>
  <name>Mongock BOM</name>
  <description>Mongock dependency management</description>

  <properties>
    <mongock.mongodb.version>4.3.2</mongock.mongodb.version>
    <mongock.core.version>2.0.4</mongock.core.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.github.cloudyrock.mongock</groupId>
        <artifactId>mongodb-v3-driver</artifactId>
        <version>${mongock.mongodb.version}</version>
      </dependency>
      <dependency>
        <groupId>com.github.cloudyrock.mongock</groupId>
        <artifactId>mongodb-sync-v4-driver</artifactId>
        <version>${mongock.mongodb.version}</version>
      </dependency>
      <dependency>
        <groupId>com.github.cloudyrock.mongock</groupId>
        <artifactId>mongodb-springdata-v2-driver</artifactId>
        <version>${mongock.mongodb.version}</version>
      </dependency>
      <dependency>
        <groupId>com.github.cloudyrock.mongock</groupId>
        <artifactId>mongodb-springdata-v3-driver</artifactId>
        <version>${mongock.mongodb.version}</version>
      </dependency>
      <dependency>

        <!-- MONGOCK CORE-->
        <groupId>com.github.cloudyrock.mongock</groupId>
        <artifactId>mongock-api</artifactId>
        <version>${mongock.core.version}</version>
      </dependency>
      <dependency>
        <groupId>com.github.cloudyrock.mongock</groupId>
        <artifactId>mongock-standalone</artifactId>
        <version>${mongock.core.version}</version>
      </dependency>
      <dependency>
        <groupId>com.github.cloudyrock.mongock</groupId>
        <artifactId>mongock-spring-v5</artifactId>
        <version>${mongock.core.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

</project>
